      method: "POST",
      body: formData
    })
    .then(res => res.json())
    .then(data => {

      if (!data.secure_url) {
        alert("Upload failed");
        return;
      }

      $("#quiz_file_url").val(data.secure_url);

      $("#getResults").prop("disabled", false);

      console.log("Uploaded:", data.secure_url);

    })
    .catch(err => {
      console.error(err);
      alert("Upload error");
    });

  });

});





function showRandomResultBlock() {
