      $(".options").append(btn);
    });

    /* Progress bar + text */
    const totalQ = quizData.length;
    const percent = ((currentQ + 1) / totalQ) * 100;
    $(".progress").css("width", percent + "%");
    $(".progress-text").text(`${currentQ + 1} of ${totalQ}`);

    /* Back button */
    currentQ === 0 ? $("#backBtn").hide() : $("#backBtn").show();

