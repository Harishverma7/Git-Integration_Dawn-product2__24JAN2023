<div class="containerX">
    <video autoplay id="video" width="100%">
        <source src="{{ section.settings.video-url }}" type="video/mp4" />
    </video>
    <div class="overlay">
        <p>{{ section.settings.video-text1 }}</p>
        <p>{{ section.settings.video-text2 }}</p>
        <p>{{ section.settings.video-text3 }}</p>
    </div>
</div>



{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "id": "video-url",
      "type": "text",
      "label": "Video Link",
		"default": "https://cdn.shopify.com/s/files/1/0059/4709/7188/files/Sequence01_1.mp4?v=1586984148"
    },
    {
      "id": "video-text1",
      "type": "text",
      "label": "Heading",
      "default": "BEAUTIFULLY CRAFTED SWIM AND RESORT WEAR FOR THE WELL-TRAVELED WOMAN."
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Video Section",
      "category": "Video"
    }
  ]
}
{% endschema %}