<div class="hero">
  <div class="hero-grid">
    <div class="col-left">
      <video muted="" autoplay="" playsinline="" loop="" class="video" style="object-position: 35% 50%">
        <source src="{{ section.settings.video-url }}" type="video/mp4">
      </video>
      <div class="text">
        <h1>{{ section.settings.text }}<span>{{ section.settings.paragraph }}</span></h1>
        <div class="button-wrapper">
          <a href="{{ section.settings.button_link }}" class="cta">{{ section.settings.btname }}<span class="arrow"></span></a>
        </div>
      </div>
    </div>
    <div class="col-right">
     <img src="{{ section.settings.image_with_text_image| img_url : 'master' }}">
    </div>
  </div>
</div>




<style>
  .hero {
    padding-bottom: 80px;
    border-bottom: 1px solid #e6e6e6;
  }
  
  .hero-grid {
  	display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 40px;
  }
  
  .hero-grid .col-right {
  	display: flex;
    align-items: flex-end;
  }
  
  .hero-grid .col-right img {
  	width: 100%;
    height: 80%;
    object-fit: cover;
    margin-top: 80px;
  }
  
  .hero h1 {
  	font-size: 32px;
    max-width: 460px;
    margin-bottom: 0;
    margin-top: 0;
    letter-spacing: 3px;
    line-height: 1.2;
  }
  
  .hero h1 span {
  	font-size: 16px;
    font-family: "TwCent";
    font-weight: 300;
    text-transform: none;
    letter-spacing: 1px;
    margin-left: 8px;
  }
  
  .hero p {
  	max-width: 300px;
    font-weight: 300;
    line-height: 1.5;
    font-size: 16px;
    letter-spacing: 1px;
    margin-bottom: 32px;
  }
  
  .hero .text {
  	display: inline-block;
    margin-top: -160px;
    margin-left: 80px;
    margin-right: -1px;
    padding: 40px;
   	background: white;
    z-index: 2;
  }
  
  .hero video {
    width: 100%;
    height: 68vh;
    max-height: 650px;
    object-fit: cover;
    z-index: -1;
  }
  
  .hero .cta {
    font-size: 16px !important;
    font-weight: 600;
    text-decoration: none;
   	color: black;
  }
  
  .hero .arrow {
	margin-left: 6px;
  	border: solid black;
  	border-width: 0 2px 2px 0;
  	display: inline-block;
  	padding: 3px;
    transform: rotate(-45deg);
  }
  
  .hero .button-wrapper {
    margin-top: 32px;
  }
  
  @media (max-width: 768px){
    
    .hero {
      min-height: 50vh;
    }
    
    .hero-grid {
      grid-template-columns: 1fr;
    }
    
    .hero-grid .col-right {
    	display: none;
    }
    
    .hero h1 {
      font-size: 20px;
      padding: 16px 0 0 0;
    }
    
    .hero .text {
      margin-left: 0;
      margin-top: -40px;
      width: 90%;
      padding: 16px;
      padding-left: 0;
    }
    
    .hero video {
      grid-row-start: 1;
      height: 60vh;
      object-fit: cover;
    }
  }
  
  @media (max-width: 370px){
  	.hero video {
      grid-row-start: 1;
      height: 55vh;
    }
    
    .hero .button-wrapper {
    	margin-top: 24px;
  	}
  
  }

</style>





{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "id": "video-url",
      "type": "text",
      "label": "Video Link",
      "default": "https://cdn.shopify.com/s/files/1/0059/4709/7188/files/Sequence01_1.mp4?v=1586984148"
    },
    {
      "id": "video-text1",
      "type": "text",
      "label": "Heading",
      "default": "BEAUTIFULLY CRAFTED SWIM AND RESORT WEAR FOR THE WELL-TRAVELED WOMAN."
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "id": "btname",
      "type": "text",
      "label": "Button Label",
      "default": "shop now"
    },
    {
      "type": "image_picker",
      "id": "image_with_text_image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Video Section",
      "category": "Video"
    }
  ]
}
{% endschema %}